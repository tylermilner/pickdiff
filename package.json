{
  "name": "pickdiff",
  "version": "0.1.0",
  "description": "A simple app to selectively diff files between two Git commits.",
  "main": "dist/server.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p tsconfig.json",
    "build:frontend": "tsc -p tsconfig.frontend.json",
    "build:watch": "concurrently \"npm run build:backend -- --watch\" \"npm run build:frontend -- --watch\"",
    "clean": "rm -rf dist public/script.js public/script.js.map",
    "type-check": "tsc --noEmit && tsc -p tsconfig.frontend.json --noEmit",
    "lint": "biome check --error-on-warnings .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "dev": "ts-node src/server.ts",
    "dev:watch": "ts-node --watch src/server.ts",
    "prod": "npm run build && npm start",
    "pretest": "npm run build",
    "test": "jest",
    "test:unit": "npm run build && jest tests/unit",
    "test:integration": "npm run build && jest tests/integration",
    "test:e2e": "npm run build && playwright test",
    "test:e2e:ui": "npm run build && playwright test --ui",
    "test:all": "npm run build && jest && npm run test:e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "prepare": "husky"
  },
  "keywords": [
    "git",
    "selective",
    "file",
    "diff",
    "file-selector",
    "visual-git-diff",
    "simple-git",
    "express"
  ],
  "author": "Tyler Milner",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "open": "^11.0.0",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@playwright/test": "^1.56.1",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": "biome check --write --unsafe --no-errors-on-unmatched"
  }
}
