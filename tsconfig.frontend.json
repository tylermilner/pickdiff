{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./public",
    "rootDir": "./frontend",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ES2020"],
    "noEmitOnError": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false
  },
  "include": ["frontend/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
